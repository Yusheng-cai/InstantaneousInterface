xdrfile = {
    path = try5400_correct.xtc
}

atomgroup = {
    name      = ice
    selection = [ indexfile solid_like_atoms5400.index ]
}

densityfield = {
    type        = averagefield

    curvature   = {
        type = tensor
	outputs = [ curvature FF2 ]
	outputNames = [ c.out ff2.out ] 
    }

    Mesh = {
	# type = loop
	outputs = [ stl ]
	outputNames = [ b.stl ]
    }

    isosurfacevalue  = 16
    dimensions  = [ 160 60 60 ]
    boundingbox = bb
    sigma       = 0.24
    cutoff      = 2.5
    atomgroup   = ice

    outputs 	= [ field vertex normal triangle ]
    outputFiles = [ test.out vertex.out normals.out triangle.out ]

}

boundingbox = {
    name   = bb
    xrange = [ 0  10.3 ]
    yrange = [ 0  5.9 ]
    zrange = [ 0  6.33 ]
}

driver = {
    startingframe = 1
}
