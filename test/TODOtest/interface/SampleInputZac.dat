xdrfile = {
    path = ../../SampleTraj/traj_comp.xtc
}

grofile = {
    path = ../../SampleTraj/confout.gro
}

atomgroup = {
    name      = ice
    selection = [ atomtype OW ]
}

curvature   = {
        name = c
	type = tensor
	outputs = [ curvature ]
	outputNames = [ IIcurvature.out ] 
}

densityfield = {
    type        = averagefield
    Mesh = {
	outputs  = [ ply ]
	outputNames = [ zacII.ply ] 
	factor   = 10
    }

    isosurfacevalue  = 16
    curvature   = [ c ]
    dimensions  = [ 160 40 50 ]
    boundingbox = bb
    sigma       = 0.24
    cutoff      = 2.5
    atomgroup   = ice
    outputs 	= [ field ]
    outputFiles = [ zacfield.out ]
}

boundingbox = {
    name   = bb
    xrange = [ 0  16.0 ]
    yrange = [ 0  4.0 ]
    zrange = [ 0  5.0 ]
}

driver = {
    startingframe = 1
    skip = 0
}
